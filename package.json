{
    "name": "boilerplate-setup",
    "version": "0.0.0",
    "description": "a cli to setup boilerplate",
    "keywords": [
        "boilerplate",
        "cli"
    ],
    "license": "MIT",
    "homepage": "https://github.com/boilerplate-setup#readme",
    "bugs": {
        "url": "https://github.com/boilerplate-setup/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/boilerplate-setup.git"
    },
    "author": "YuTengjing <ytj2713151713@gmail.com>",
    "files": [
        "dist"
    ],
    "type": "module",
    "bin": "./dist/index.js",
    "engines": {
        "node": ">=16.14.0"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "eslintConfig": {
        "extends": "@yutengjing/eslint-config-typescript",
        "rules": {
            "unicorn/no-process-exit": 0
        }
    },
    "prettier": "@yutengjing/prettier-config",
    "lint-staged": {
        "*.{ts,json,md}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    },
    "tsup": {
        "entry": [
            "src/index.ts"
        ],
        "format": "esm",
        "clean": true
    },
    "scripts": {
        "prepublishOnly": "pnpm run build",
        "build": "tsup-node",
        "type-check": "tsc --noEmit",
        "lint": "eslint .",
        "test": "pnpm lint && pnpm type-check",
        "release": "pnpm test && npx @yutengjing/release && pnpm publish"
    },
    "dependencies": {
        "@clack/prompts": "^0.6.3",
        "capital-case": "^1.0.4",
        "consola": "^3.2.3",
        "execa": "^7.1.1",
        "gradient-string": "^2.0.2",
        "log-symbols": "^5.1.0",
        "picocolors": "^1.0.0",
        "titleize": "^3.0.0"
    },
    "devDependencies": {
        "@types/gradient-string": "^1.1.2",
        "@types/node": "^18.16.19",
        "@yutengjing/eslint-config-typescript": "^0.4.2",
        "@yutengjing/prettier-config": "^0.0.1",
        "@yutengjing/release": "^0.0.8",
        "@yutengjing/tsconfig-node": "^0.0.3",
        "eslint": "^8.44.0",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.0",
        "simple-git-hooks": "^2.8.1",
        "tsup": "^7.1.0",
        "tsx": "^3.12.7",
        "type-fest": "^3.12.0",
        "typescript": "^5.1.6"
    }
}
